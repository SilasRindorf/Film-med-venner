<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ProfileActivity"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/textview_profile_title"
        android:layout_width="171dp"
        android:layout_height="31dp"
        android:text="Profile"
        android:textAlignment="center"
        android:textSize="15sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/profile_container"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/gridView"
        app:layout_constraintTop_toBottomOf="@id/textview_profile_title"/>
    <!--Friends-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_friends"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView_friends_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friends"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/textView_friends_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampletext_friends_description"
                android:layout_weight="2"
                />
        </LinearLayout>
    </LinearLayout>

    <!--Rated-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView_rated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_rated"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView_rated_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rated"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/textView_rated_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampletext_rated_description"
                android:layout_weight="2"
                />
        </LinearLayout>
    </LinearLayout>

    <!--Reviewed-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView_reviewed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_reviewed"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView_reviewed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reviewed"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/textView_reviewed_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampletext_reviewed_description"
                android:layout_weight="2"
                />
        </LinearLayout>
    </LinearLayout>

    <!--ToWatchList-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView_to_watch_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_wanttowatch"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView_want_to_watch_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wantToWatch"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/textView_want_to_watch_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampletext_want_to_watch_description"
                android:layout_weight="2"
                />
        </LinearLayout>
    </LinearLayout>

    <!--WatchedList-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView_watched_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_watched"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView_watchedlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/watched"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/textView_watchedlist_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampletext_watchedlist_description"
                android:layout_weight="2"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
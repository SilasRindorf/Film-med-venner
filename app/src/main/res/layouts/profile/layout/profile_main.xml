<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/return_btn"
        android:layout_width="58dp"
        android:layout_height="51dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/returnimage" />

    <ImageView
        android:id="@+id/image_profilePicture"
        android:layout_width="102dp"
        android:layout_height="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profilepicture" />

    <TextView
        android:id="@+id/text_profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/profileName"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toTopOf="@+id/text_profileInterests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_profilePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_profileInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profileInterests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_profilePicture"
        app:layout_constraintTop_toBottomOf="@+id/text_profileName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profilePicture">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_wantToWatch"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/wanttowatch" />

            <TextView
                android:id="@+id/text_wantToWatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wantToWatch"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_watched"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/watched" />
            <TextView
                android:id="@+id/text_watched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/watched" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_reviewed"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/reviewed"/>
            <TextView
                android:id="@+id/text_reviewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reviewed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_rated"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/rated"/>
            <TextView
                android:id="@+id/text_rated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rated"/>
        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">

    <!-- TODO Ubehagelig fixed højde. Der er en midlertidig løsning pt. så den ikke gemmer sig bag ved navbar.-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- PROFILE SETTINGS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#DDFFFFFF"/>

            <!-- NAVN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Navn: "
                    android:textColor="#DDFFFFFF"/>
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skriv dit navn her..."
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#DDFFFFFF"/>
            </LinearLayout>

            <!-- MAIL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Mail: "
                    android:textColor="#DDFFFFFF"/>
                <TextView
                    android:id="@+id/profile_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skriv din mail her"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#DDFFFFFF"/>
            </LinearLayout>
            <!-- TOP GENRE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Top genre: "
                    android:textColor="#DDFFFFFF"/>
                <EditText
                    android:id="@+id/profile_top_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Documentaries, romance, thriller"
                    android:fontFamily="sans-serif-medium"
                    android:textColorHint="#DDFFFFFF"/>
            </LinearLayout>
            <!-- PROFILE PICTURE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="fill_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Profilbillede: "
                    android:textColor="#DDFFFFFF"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/icon_profilepicture"
                    app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"/>
                <Button
                    android:id="@+id/change_profile_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skift profilbillede"/>
            </LinearLayout>

            <!-- HOMEFEED SETTINGS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Homefeed"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#DDFFFFFF"/>
            <Switch
                android:id="@+id/switch_watchList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/switch_watchList"
                android:textColor="#DDFFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch_reviews" />

            <Switch
                android:id="@+id/switch_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/switch_review"
                android:textColor="#DDFFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch_ratings" />

            <Switch
                android:id="@+id/switch_ratings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/switch_ratings"
                android:textColor="#DDFFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_mark_all"
                    android:layout_width="368dp"
                    android:layout_height="40dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="See posts from all your friends"
                    android:textColor="#DDFFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch_watchList" />

                <CheckBox
                    android:id="@+id/checkBox_mark_all"
                    android:layout_width="43dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch_watchList" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/save_changes_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gem ændringer"/>
                <Button
                    android:id="@+id/btn_log_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log ud"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/nav_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.SettingsActivity"
    android:background="@color/colorBackground">


    <ScrollView
        android:layout_width="411dp"
        android:layout_height="729dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_Settings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_profile_settings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Profile settings"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#DD000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/text_homefeed_settings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Homefeed settings"
                android:textColor="#DD000000"
                android:textSize="30sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/nav_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>

    <TextView
        android:id="@+id/title_Settings"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textSize="15sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorNavBar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
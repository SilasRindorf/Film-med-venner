<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.SettingsActivity">

    <TextView
        android:id="@+id/title_Settings"
        android:layout_width="171dp"
        android:layout_height="31dp"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textSize="15sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_ratings"
        android:layout_width="196dp"
        android:layout_height="82dp"
        android:layout_marginTop="152dp"
        android:text="@string/switch_ratings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_Settings" />

    <Switch
        android:id="@+id/switch_reviews"
        android:layout_width="194dp"
        android:layout_height="83dp"
        android:text="@string/switch_review"
        app:layout_constraintBottom_toTopOf="@+id/switch_watchList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_ratings" />

    <Switch
        android:id="@+id/switch_watchList"
        android:layout_width="194dp"
        android:layout_height="83dp"
        android:layout_marginBottom="104dp"
        android:text="@string/switch_watchList"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/nav_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
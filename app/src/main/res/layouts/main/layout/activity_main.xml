                    android:layout_weight="0.33"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/icon_wanttowatch" />

                <ImageButton
                    android:layout_width="0dp"

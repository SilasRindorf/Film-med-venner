<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/imageView_moviePoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mp_batman_the_dark_knight"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="2"
            android:onClick="onClickPoster"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampletext_this_person_reviewed_this_movie"
                android:layout_weight="2"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ImageView_star_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_filled_star"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="3"
                    />
                <ImageView
                    android:id="@+id/ImageView_star_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_filled_star"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="3"
                    />
                <ImageView
                    android:id="@+id/ImageView_star_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_filled_star"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="3"
                    />
                <ImageView
                    android:id="@+id/ImageView_star_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_filled_star"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="3"
                    />
                <ImageView
                    android:id="@+id/ImageView_star_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_empty_star"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="3"
                    />
            </LinearLayout>
            <TextView
                android:onClick="goToReview"
                android:id="@+id/textView_review_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="JEG KAN RIGTIG GODT LIDE BATMAN DET ER MIN YNGLINGS FILM JEG ELSKER DEN BARE SÃ… MEGET!"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
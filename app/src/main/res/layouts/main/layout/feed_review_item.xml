<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="173dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mp_batman_the_dark_knight"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="2"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView_profileName_reviewed_this_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampletext_this_person_reviewed_this_movie"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/textView_wrote_this_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampletext_reviewed"
                android:layout_weight="2"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <ImageButton
                    android:id="@+id/image_btn_add_to_watch_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_wanttowatch"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="3"
                    />
                <ImageButton
                    android:id="@+id/image_btn_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_reviewed"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="3"
                    />
                <ImageButton
                    android:id="@+id/image_btn_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_rated"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="3"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
